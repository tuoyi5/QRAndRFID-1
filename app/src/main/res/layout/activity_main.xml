<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextTextIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="30"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="http://172.20.10.161:1444"
        android:textColor="@color/black">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/buttonRFID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ReadRFID"
                android:checked="true"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/background_selected_text"
                android:gravity="center"/>

            <RadioButton
                android:id="@+id/buttonQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/background_selected_text"
                android:gravity="center"
                android:text="ReadQR"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="409dp"
            android:layout_height="445dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_selected_text"
            android:gravity="center"
            android:padding="10dp"
            android:text="Chek QR Or RFID Press Trigger"
            android:textColor="@color/black"
            android:textSize="25sp"></TextView>
    </LinearLayout>
</LinearLayout>